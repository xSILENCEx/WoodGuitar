<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/background_001"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/uiter"
        android:scaleType="center" />

    <Button
        android:id="@+id/back_01"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:text="@string/back"
        android:textSize="10sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/bt_bg"
        tools:ignore="SmallSp" />

    <Button
        android:id="@+id/more_01"
        android:layout_alignEnd="@id/background_001"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:text="@string/more"
        android:textSize="10sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/bt_bg"
        tools:ignore="SmallSp" />

    <RelativeLayout
        android:layout_width="94dp"
        android:layout_height="440dp"
        android:layout_centerHorizontal="true">
        <Button
            android:id="@+id/x_1"
            android:layout_width="14dp"
            android:layout_height="440dp"
            android:background="@drawable/xian_bg"/>
        <Button
            android:id="@+id/x_2"
            android:layout_marginStart="16dp"
            android:layout_width="14dp"
            android:layout_height="440dp"
            android:background="@drawable/xian_bg"/>
        <Button
            android:id="@+id/x_3"
            android:layout_marginStart="32dp"
            android:layout_width="14dp"
            android:layout_height="440dp"
            android:background="@drawable/xian_bg"/>
        <Button
            android:id="@+id/x_4"
            android:layout_marginStart="48dp"
            android:layout_width="14dp"
            android:layout_height="440dp"
            android:background="@drawable/xian_bg"/>

        <Button
            android:id="@+id/x_5"
            android:layout_marginStart="64dp"
            android:layout_width="14dp"
            android:layout_height="440dp"
            android:background="@drawable/xian_bg" />

        <Button
            android:id="@+id/x_6"
            android:layout_marginStart="80dp"
            android:layout_width="14dp"
            android:layout_height="440dp"
            android:background="@drawable/xian_bg" />
    </RelativeLayout>



    <Button
        android:layout_width="155dp"
        android:layout_marginTop="438dp"
        android:layout_height="28dp"
        android:background="@drawable/gxq"
        android:scaleType="center"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/clean_01"
        android:layout_marginTop="500dp"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/colorTransparent" />


</RelativeLayout>
